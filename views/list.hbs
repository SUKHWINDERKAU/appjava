{{!< layouts/main }}

<h2>Items List</h2>

{{#if items.length}}
  <table class="item-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th style="width: 150px;">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each items}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>
            <a href="/items/edit/{{this._id}}" class="btn btn-edit">Edit</a>
            <form action="/items/delete/{{this._id}}" method="POST" class="inline-form" onsubmit="return confirm('Are you sure you want to delete this item?');">
              <button type="submit" class="btn btn-delete">Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>No items found. <a href="/items/add" class="btn btn-add">Add your first item</a></p>
{{/if}}

<a href="/items/add" class="btn btn-add">Add New Item</a>
